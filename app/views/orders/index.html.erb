</div>
<ul id="orders">
  <% @orders.each do |order| %>
    <li>
      <div class="flex-row">
        <div class="col-align-cent">
          <% case order.source %>
          <% when "amz" %>
            <i class="fab fa-amazon"></i>
          <% when "ebay" %>
            <i class="fab fa-ebay"></i>
          <% else %>
            <i class="fas fa-phone"></i>
          <% end %>
        </div>

        <div class="d-flex flex-column justify-content-center">
          <p class="light-text small"><%= order.order_ref %></p>
          <p class="medium"><%= order.customer_name %></p>
          <p class="small">Â£
            <% prices = 0 %>
            <% order.order_items.each do |item|%>
              <% prices += item.price %>
            <% end %>
            <%= '%.2f' % prices %>
          </p>
        </div>

      </div>
      <div class="col-align-cent">
        <%= link_to order_path(order), class: 'medium' do %>
          <div class="text-center">
            <p>Pick</p>
            <i class="fas fa-box-open"></i>
          </div>
        <% end %>
      </div>

    </li>
  <% end %>
</ul>
